{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": "apps/web/.next",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE": "/api",
    "NODE_ENV": "production",
    "DEMO_MODE": "true",
    "USE_SSOV2": "1"
  }
}
